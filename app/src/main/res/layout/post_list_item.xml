<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:elevation="2dp">

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/post_profile_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_mode="circle"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/post_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/post_profile_photo"
        app:layout_constraintBottom_toBottomOf="@id/post_profile_photo">

        <TextView
            android:id="@+id/poster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster_name"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/post_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/post_timestamp"
            app:layout_constraintTop_toBottomOf="@id/poster_name"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="  â€¢  "/>

        <TextView
            android:id="@+id/post_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/post_separator"
            app:layout_constraintTop_toBottomOf="@id/poster_name"
            android:textSize="12sp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/post_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_profile_photo" />

    <ImageView
        android:id="@+id/post_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/post_message"
        android:adjustViewBounds="true"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/post_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_photo"
        android:padding="16dp">
        <ImageView
            android:id="@+id/post_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_favorite_black_24dp"
            android:alpha="0.7"/>
        <TextView
            android:id="@+id/post_likes_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/post_like_button"
            app:layout_constraintTop_toTopOf="@id/post_like_button"
            app:layout_constraintBottom_toBottomOf="@id/post_like_button" />
        <ImageView
            android:id="@+id/post_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_chat_bubble_black_24dp"
            android:alpha="0.7"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/post_comments_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/post_comment_button"
            app:layout_constraintTop_toTopOf="@id/post_comment_button"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_button" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/last_comment_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_footer">
        <ImageView
            android:id="@+id/last_comment_divider"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black_overlay"/>
        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/last_comment_profile_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/last_comment_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shape_mode="circle"/>
        <ImageView
            android:id="@+id/post_new_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_comment_profile_photo"
            app:layout_constraintBottom_toBottomOf="@id/last_comment_profile_photo"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_send_black_24dp"
            android:alpha="0.7"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/post_new_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_comment_profile_photo"
            app:layout_constraintBottom_toBottomOf="@id/last_comment_profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/post_new_comment_button"
            android:layout_marginStart="72dp"
            android:textSize="14sp"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="invisible"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Be the first one to comment" />
        <TextView
            android:id="@+id/last_comment_poster_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_comment_profile_photo"
            app:layout_constraintBottom_toBottomOf="@id/last_comment_profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            android:visibility="invisible"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/last_comment_poster_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_comment_profile_photo"
            app:layout_constraintBottom_toBottomOf="@id/last_comment_profile_photo"
            app:layout_constraintStart_toEndOf="@id/last_comment_poster_name"
            android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>