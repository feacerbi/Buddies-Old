<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_picture_background"
    tools:context="br.com.felipeacerbi.buddies.activities.BuddyProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_keyboard_backspace_white_24dp"
        android:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/picture_back"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@color/profile_picture_background">
    </FrameLayout>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        app:stroke_color="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"/>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:stroke_color="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/picture"
        app:layout_constraintEnd_toEndOf="@id/picture"
        android:src="@drawable/ic_edit_black_24dp"/>

    <TextView
        android:id="@+id/buddy_name_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/picture_back"
        android:text="INFO"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buddy_name_row"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buddy_name_description">
        <ImageView
            android:id="@+id/buddy_name_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/name_edit_button_description"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/buddy_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="marquee"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buddy_name_edit_button"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/pet_chooser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/buddy_name_row" />

    <TextView
        android:id="@+id/breed_chooser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:elevation="2dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pet_chooser" />

    <TextView
        android:id="@+id/buddy_posts_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/breed_chooser"
        android:text="POSTS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/posts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/buddy_posts_description"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="">
    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/posts_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
