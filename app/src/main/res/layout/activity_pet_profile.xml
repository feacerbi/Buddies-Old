<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_picture_background"
    tools:context="br.com.felipeacerbi.buddies.activities.BuddyProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_keyboard_backspace_white_24dp"
        android:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/picture_back"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@color/profile_picture_background">
    </FrameLayout>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        app:stroke_color="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"/>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:stroke_color="@color/colorPrimary"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/picture"
        app:layout_constraintEnd_toEndOf="@id/picture"
        android:src="@drawable/ic_edit_black_24dp"/>

    <RelativeLayout
        android:id="@+id/buddy_name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/picture"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/buddy_name_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorPrimary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/buddy_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Name"/>
        <TextView
            android:id="@+id/buddy_name"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buddy_name_title"
            android:layout_toStartOf="@id/buddy_name_edit_button"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pet_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/buddy_name_row"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Animal"/>
        <TextView
            android:id="@+id/pet_chooser"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_title"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/breed_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/pet_row"
        android:orientation="vertical">
        <TextView
            android:id="@+id/breed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Breed"/>
        <TextView
            android:id="@+id/breed_chooser"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/breed_title"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/buddy_posts_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/breed_row"
        android:text="POSTS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/posts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/buddy_posts_description"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="">
    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/posts_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
