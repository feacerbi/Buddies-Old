<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_picture_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.felipeacerbi.buddies.activities.PlaceActivity"
    tools:showIn="@layout/activity_place">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/profile_picture_background">

        <FrameLayout
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Friendly Items"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:id="@+id/snacks_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:src="@drawable/ic_local_dining_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/snacks_icon"
                        android:layout_alignTop="@id/snacks_icon"
                        android:layout_alignBottom="@id/snacks_icon"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="Snacks"/>
                    <ImageView
                        android:id="@+id/water_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/snacks_icon"
                        android:alpha="0.7"
                        android:src="@drawable/ic_local_drink_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/water_icon"
                        android:layout_alignTop="@id/water_icon"
                        android:layout_alignBottom="@id/water_icon"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="Water"/>
                    <ImageView
                        android:id="@+id/reserved_place_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/water_icon"
                        android:alpha="0.7"
                        android:src="@drawable/ic_home_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/reserved_place_icon"
                        android:layout_alignTop="@id/reserved_place_icon"
                        android:layout_alignBottom="@id/reserved_place_icon"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="Reserved place"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/progress_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="8.5"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/progress_number"
                        android:layout_alignTop="@id/progress_number"
                        android:layout_marginEnd="8dp"
                        android:progress="85"
                        style="@android:style/Widget.Material.ProgressBar.Horizontal" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/items">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <ImageView
                    android:id="@+id/maps_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_map_black_24dp"
                    android:paddingStart="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Address"/>
                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_title"
                    android:layout_toStartOf="@id/maps_button"
                    android:text="Ferreira de AraÃºjo St., 759 - Vila Madalena - Sao Paulo - SP - Brazil"/>
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Description"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A good place to have a burger."/>
            </LinearLayout>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>
