<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="br.com.felipeacerbi.buddies.activities.NewBuddyActivity">

    <FrameLayout
        android:id="@+id/picture_back"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/profile_picture_background">
    </FrameLayout>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        app:stroke_color="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/picture_back"
        app:layout_constraintEnd_toEndOf="@id/picture_back"
        app:layout_constraintTop_toTopOf="@id/picture_back"
        app:layout_constraintBottom_toBottomOf="@id/picture_back"
        android:src="@drawable/no_phototn"/>

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/picture_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:shape_mode="circle"
        app:stroke_width="3dp"
        android:padding="8dp"
        app:stroke_color="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/picture"
        app:layout_constraintEnd_toEndOf="@id/picture"
        android:src="@drawable/ic_edit_black_24dp"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:background="@color/profile_picture_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:gravity="center"
            android:background="@android:color/background_light"
            android:text="Cancel"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />
        <FrameLayout
            android:layout_width="2dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:gravity="center"
            android:background="@android:color/background_light"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pet_name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/picture_back">

        <AutoCompleteTextView
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/pet_name_row">

        <AutoCompleteTextView
            android:id="@+id/breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Breed"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
